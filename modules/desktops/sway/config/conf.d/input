# Cursor
seat * {
  hide_cursor when-typing enable
  hide_cursor 10000
  xcursor_theme $cursor
}

# Input
input type:touchpad {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
  pointer_accel 0.4
}

input type:mouse {
  accel_profile "flat"
  pointer_accel 0.1
}

input type:keyboard  {
  xkb_capslock disabled
  xkb_numlock enabled
  repeat_delay  300
  repeat_rate 30
  xkb_layout us
}

# vi: ft=swayconfig
